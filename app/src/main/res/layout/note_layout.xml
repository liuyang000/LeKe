<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@android:color/holo_green_light">

        <Button
            android:id="@+id/save_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/save"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/input_gesture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gesture_input" />

            <Button
                android:id="@+id/input_soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/softboard_input" />
            <Button
                android:id="@+id/undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/undo_text"
                />
            <Button
                android:id="@+id/redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/redo_text"
                />
        </LinearLayout>

        <Button
            android:id="@+id/cancel_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/delete"
            android:textSize="25sp" />

        <com.rongjie.leke.view.NoteBookView
            android:id="@+id/booknote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cancel_label"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cancel_label"
            android:layout_margin="10dp"
            android:background="@color/background"
            android:gravity="start|top"
            android:visibility="gone" />
    </RelativeLayout>
</FrameLayout>

