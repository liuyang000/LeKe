<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="384dp"
    android:layout_height="224dp"
    android:layout_gravity="center"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shuqian_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/img_shuqian_title"
            android:gravity="center"
            android:text="添加书签"
            android:textColor="#4c4c4c"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/et_marks"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shuqian_input"
            android:gravity="center|left"
            android:maxLength="20"
            android:paddingLeft="5dp"
            android:text="书签1"
            android:textSize="18dp" />


        <FrameLayout
            android:id="@+id/fm_ConfirmOrCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btn_add_marks"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/img_btn_shuqian_queding_select"
                android:gravity="center"
                android:text="添加书签"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/ll_ChangeOrDelete"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:layout_marginRight="15dp"
                    android:background="@drawable/img_btn_shuqian_queding_select"
                    android:id="@+id/btn_change"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="修改书签"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/img_btn_shuqian_queding_select"
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="删除书签"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtn_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/img_btn_quxiao_select" />
</RelativeLayout>
